<div class="modal fade fixed top-0 left-0 hidden w-full h-full outline-none overflow-x-hidden overflow-y-auto font-lato"
    id="modal_settings" tabindex="-1" aria-labelledby="modal_settings" aria-hidden="true">
    <div class="modal-dialog relative w-auto pointer-events-none lg:max-w-[720px]">
        <div
            class="modal-content border-none shadow-lg relative flex flex-col w-full pointer-events-auto bg-white bg-clip-padding rounded-md outline-none text-current">
            <div
                class="modal-header flex flex-shrink-0 items-center justify-between p-4 pb-2 rounded-t-md border-b border-gray-200">
                <h3 class="uppercase text-gray-800" id="modal_settings_label">Instellingen</h3>
                <button type="button"
                    class="btn-close box-content w-4 h-4 p-1 text-black border-none rounded-none opacity-50 focus:shadow-none focus:outline-none focus:opacity-100 hover:text-black hover:opacity-75 hover:no-underline"
                    data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body relative px-4 py-1">
                [modal-settings-body]
            </div>
            <div class="modal-footer rounded-b-md">
            </div>
        </div>
    </div>
</div>